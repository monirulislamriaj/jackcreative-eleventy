<section class="resume pt-9 pt-xxl-14 pb-xxl-10 pb-lg-8 pt-md-9 pb-6">
  <div class="resume-shape-wrapper position-absolute w-100 h-100">
    <div class="shape-1"></div>
    <div class="shape-2"></div>
    <div class="shape-3"></div>
    <div class="shape-4"></div>
    <div class="shape-5"></div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="section-header">
            <h2>{{resume.title}}</h2>
          </div>
          <div class="card-body">
            <div class="experiencEducation">
              <div class="experience">
                <div class="title">
                  <h5>{{resume.workHead}}</h5>
                </div>
                {% for workExp in resume.work %}
                <div class="content">
                  <h4>{{workExp.corp}}</h4>
                  <p>
                    {{workExp.dig}}<br />
                    {{workExp.year}}
                  </p>
                </div>
                {% endfor %}
              </div>
              <div class="education">
                <div class="title">
                  <h5>{{resume.eduHead}}</h5>
                </div>
                {% for education in resume.education %}
                <div class="content">
                  <h4>{{education.ins}}</h4>
                  <p>
                    {{education.degree}}<br />
                    {{education.year}}
                  </p>
                </div>
                {% endfor %}
              </div>
            </div>
            <div class="freelance">
              <div class="title">
                <h5>{{resume.clientsHead}}</h5>
              </div>
              <div class="freelance-wrapper">
                {% for client in resume.clients %}
                <div class="item">
                  <img src="{{client}}" alt="Clients Images" />
                </div>
                {% endfor %}
              </div>
            </div>
            <div class="skillsTools pt-2">
              <!--- Srart skills---->
              <div class="skills">
                <div class="title">
                  <h5>{{resume.skillsHead}}</h5>
                </div>
                <div
                  class="
                    d-flex
                    justify-content-center justify-content-lg-start
                    mb-4 mb-xl-0
                  "
                >
                  <div class="content me-xxl-8 me-0">
                    <ul class="list-unstyled">
                      {% for skill in resume.skills %}
                      <li>{{skill}}</li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
              <!--- Srart tools---->
              <div class="tools">
                <div class="title">
                  <h5>{{resume.toolsHead}}</h5>
                </div>
                <div class="tools-wrapper">
                  {% for tool in resume.tools %}
                  <div class="item">
                    <img src="{{tool}}" alt="Tools I Use" />
                  </div> 
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>