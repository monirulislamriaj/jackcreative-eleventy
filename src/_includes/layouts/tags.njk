{% extends "base.njk" %}
{% block content %}
  <section class="blog pt-lg-10 pb-xxl-9">
    <div class="blog-shape-wrapper position-absolute w-100 h-100">
      <div class="shape-1">
      </div>
      <div class="shape-2">
      </div>
      <div class="shape-3">
      </div>
      <div class="shape-4">
      </div>
      <div class="shape-5">
      </div>
    </div>
    <div class="container">
      <!--=====####======Start Recent Blog ---====####=====-->
      <div class="row recent-blog">
        <!--==== Start Recent Blog Section Header ====-->
        <div class="col-lg-12">
          <div class="ssection-header pt-xxl-9 pt-lg-7 pt-12 pb-6">
            <h2 class="recent-blog-title">{{tag | capitalize}} Posts</h2>
          </div>
        </div>
        <!--==== End Recent Blog Section Header ====-->
        {% for post in collections[tag] %}
        <div class="col-lg-4">
          <article class="card ">
            <div class="card-img">
              <img src="{{post.data.featureImg}}" alt="featured-thumb1" class="w-100">
            </div>
            <div class="card-body">
              <div class="blog-post-meta ">
                <ul class="list-unstyled">
                  <li class="">
                    {% set len = post.data.tags | length %}
                    {% for index in range(1) %}
                    <a href="/tags/{{post.data.tags[index]}}">{{post.data.tags[index]}}</a>
                    {% endfor %}
                  </li>
                  <li class="">
                    <span class="ms-2">{{post.data.publishedDate}}</span>
                  </li>
                </ul>
              </div>
              <a href="{{post.url}}" class="">
                <h5>{{post.data.title}}</h5>
              </a>
            </div>
          </article>
        </div>
        {% endfor %}
      </div>
      <!--=====####======End Recent Blog ---====####=====-->
    </div>
  </section>
{% endblock %}