{% extends "base.njk" %}

{% block content %}
    <section class="contact-form pt-8 pt-xxl-15 pb-xxl-7 pb-0">
      <div class="contact-form-shape-wrapper position-absolute w-100 h-100">
        <div class="shape-1">
        </div>
        <div class="shape-2">
        </div>
        <div class="shape-3">
        </div>
        <div class="shape-4">
        </div>
        <div class="shape-5">
        </div>
      </div>
      <div class="container">
        <!---==== Srart Contact Form Section Header ---=====-->
        <div class="row">
          <div class="col-lg-12">
            <div class="section-header">
              <h2>{{title}}</h2>
            </div>
          </div>
        </div>
        <!---==== End Contact Form Section Header ---=====-->
        <div class="row">
          <!--== Start Contact Form Area ==-->
          <div class="col-lg-8">
            <form class="row">
              <h3>{{formHead}}</h3>
              <div class="col-md-12 col-lg-6">
                <input type="text" class="form-control" id="inputEmail4" placeholder="{{placeholder.firstName}}">
              </div>
              <div class="col-md-12 col-lg-6">
                <input type="text" class="form-control" id="inputEmail4" placeholder="{{placeholder.lastName}}">
              </div>
              <div class="col-md-12 col-lg-12">
                <input type="text" class="form-control" id="goal" placeholder="{{placeholder.company}}">
              </div>
              <div class="col-md-12 col-lg-12">
                <select class="form-select" aria-label="Default select example">
                  <option value="" selected>{{placeholder.service.selected}}</option>
                  {% for service in placeholder.service.other %}
                  <option value="{{service}}">{{service}}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="col-md-12 col-lg-12">
                <select class="form-select" aria-label="Default select example">
                  <option value="" selected>{{placeholder.projects.selected}}</option>
                  {% for project in placeholder.projects.other %}
                  <option value="{{project}}">{{project}}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="col-md-12 col-lg-12">
                <input class="form-control" type="number" placeholder="{{placeholder.budget}}">
              </div>
              <div class="col-12">
                <textarea class="form-control" id="floatingTextarea2" placeholder="{{placeholder.message}}" rows="4"
                  spellcheck="false"></textarea>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-lg mt-7 ">
                  <span class=" position-relative">
                    {{formBtnText}}
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 15L15 5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                      <path d="M6.875 5L15 5L15 13.125" stroke="white" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round" />
                    </svg></span>
                  <span class=" position-relative">
                    {{formBtnText}}
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 15L15 5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                      <path d="M6.875 5L15 5L15 13.125" stroke="white" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round" />
                    </svg></span>
                </button>
              </div>
            </form>
          </div>
          <!--== End Contact Form Area ==-->
          <!--== Staer Contact Form widget ==-->
          <div class="col-lg-4">
            <div class="contact-form-widget">
              <img src="{{siteMap.logo}}" alt="">
              <h6>{{siteMap.des}}</h6>
              <ul class="list-unstyled">
                <li>
                  <span>{{siteMap.email.head}}</span>
                  <a href="mailto:{{siteMap.email.link}}">{{siteMap.email.link}}</a>
                </li>
                <li>
                  <span>{{siteMap.phone.head}}</span>
                  <a href="tel:{{siteMap.phone.link}}">{{siteMap.phone.link}}</a>
                </li>
                <li>
                  <span>{{siteMap.dribbble.head}}</span>
                  <a href="https://{{siteMap.dribbble.link}}">{{siteMap.dribbble.link}}</a>
                </li>
              </ul>
            </div>
          </div>
          <!--== End Contact Form widget ==-->
        </div>
      </div>
    </section>
{% endblock %}